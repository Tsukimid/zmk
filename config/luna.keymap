        };

        // ALPHA
        combo_z {
            timeout-ms = <100>;
            layers = <0>;
            key-positions = <0 10>;
            bindings = <&kp Z>;
        };
        
        combo_j {
            timeout-ms = <100>;
            layers = <0>;
            key-positions = <11 20>;
            bindings = <&kp J>;
        };
        
        combo_v {
            timeout-ms = <100>;
            layers = <0>;
            key-positions = <13 22>;
            bindings = <&kp V>;
        };
        
        combo_q {
            timeout-ms = <100>;
            layers = <0>;
            key-positions = <16 23>;
            bindings = <&kp Q>;
        };
        
        combo_pd {
            timeout-ms = <100>;
            layers = <0>;
